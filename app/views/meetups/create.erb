<h1>Create a New Meetup</h1>

<form action="/meetups/create_new" method="post">
  <div>
    <label for="name">Name</label>
    <input type="text" id="name" name="name" value="<%= @new_meetup.name %>">
  </div>

  <div>
    <label for="location">Location</label>
    <input type="text" id="location" name="location" value="<%= @new_meetup.location %>">
  </div>

  <div>
    <label for="description">Description</label>
    <input type="text" id="description" name="description" value="<%= @new_meetup.description %>">
  </div>

  <div>
    <input type="submit" value="Create Meetup">
  </div>
</form>

<% if @errors %>
  <% @errors.each do |error| %>
    <p><%= error %></p>
  <% end %>
<% end %>
