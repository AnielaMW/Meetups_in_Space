<h1><%= @meetup.name %></h1>
<h2>At <%= @meetup.location %></h2>
<p><%= @meetup.description %></p>
<h6>Created by <%= @meetup.user.username %></h6>

<form action="/meetups/join" method="post">
  <div>
    <button type="submit" value="<%= @meetup.id %>" name="joinMeetup">Join Meetup</button>
  </div>
</form>

<ul>
  <% @attendees.each do |user| %>
    <li><img src="<%= user.avatar_url %>" alt="<%= user.username %>s avatar"><%= user.username %></li>
  <% end %>
</ul>
